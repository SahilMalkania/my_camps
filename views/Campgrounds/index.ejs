<%include ../partials/header %>

<div class="container" style=" margin-top:7.0em">
  <header class='jumbotron'>	
  <div class="container">	
    <h1>Welcome to MyCamps</h1>
    <p>View our handpicked campgrounds from all over the world</p> 
    <p>
       <a class='btn btn-primary btn-lg' href="/campgrounds/new">Add new campground</a>
    </p>
   </div> 
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach((campground) => {%>
      <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="img-thumbnail" style=" margin-top:10px">
          <img src="<%= campground.image %>" style="width:100%;"/>
          <div class="caption">
            <h4 ><%= campground.name %></h4>
          </div>
          <p>
            <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% })%>
  </div>
</div>

<% include ../partials/footer %>